# Agent Village Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# LLM PROVIDERS
# =============================================================================
# Anthropic (Claude) - Required for Governor/Planner
LLM__ANTHROPIC_API_KEY=your-anthropic-api-key-here

# OpenAI (GPT-4) - Optional fallback
LLM__OPENAI_API_KEY=your-openai-api-key-here

# Ollama (Local) - For cost-effective simple tasks
LLM__OLLAMA_BASE_URL=http://localhost:11434
LLM__OLLAMA_MODEL=llama3.2

# Default provider
LLM__DEFAULT_PROVIDER=anthropic

# =============================================================================
# MEMORY STORAGE
# =============================================================================
# PostgreSQL - Relational storage
MEMORY__POSTGRES_URL=postgresql+asyncpg://village:village@localhost:5432/village

# Qdrant - Vector storage
MEMORY__QDRANT_URL=http://localhost:6333
MEMORY__QDRANT_COLLECTION=village_memory

# Redis - Cache and message bus
MEMORY__REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SAFETY LIMITS
# =============================================================================
SAFETY__MAX_RECURSION_DEPTH=10
SAFETY__MAX_AGENT_SPAWNS=50
SAFETY__MAX_TOKENS_PER_TASK=100000
SAFETY__MAX_EXECUTION_TIME_SECONDS=3600

# =============================================================================
# API SERVER
# =============================================================================
API__HOST=0.0.0.0
API__PORT=8000
API__WORKERS=4
API__RELOAD=true
